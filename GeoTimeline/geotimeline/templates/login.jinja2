{% extends "base.html" %}
{% block title %}Login{% endblock %}
{% block head %}
    {{ super() }}
    <!-- Add to head here -->
    <style>
      #usr-group{
        display:none;
      }
    </style>
{% endblock %}

{% block content %}
  <div id="login-container" class="index-section">
    <div id="middle">
      <div class="middle align-right">
        <div id="left" class="app-welcome align-left">
          
        </div>
        <div id="right" class="app-welcome align-right"></div>
      </div>
    </div>
    <div id="bottom">
      <div id='signup' class='login-block'>
       <h2>Sign Up</h2>
       {% if messages[0] %}
       <div class="alert alert-danger">{{messages[0]}}</div>
       {% endif %}
        <form action="{{url}}" method="post" role="form">
          <input type="hidden" name="came_from" value="{{came_from}}"/>
          <div class='form-group'>
            <label for="first-name">First Name</label>
            <input type="text" class="form-control" name='first-name' id="first-name" placeholder="Enter first name" value="">
          </div>
          <div class='form-group'>
            <label for="last-name">Last Name</label>
            <input type="text" class="form-control" name='last-name' id="last-name" placeholder="Enter last name" value="">
          </div>
          <div class="form-group has-feedback">
            <label for="login">Email address</label>
            <input type="email" class="form-control" id="login" name='login' placeholder="Enter email">
            <span class="glyphicon glyphicon-ok form-control-feedback"></span>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="confirm">Confirm Password</label>
            <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-default" name='signup.submitted'>Submit</button>
        </form>
      </div>
      <div class='login-block'>
        <h2>Login</h2>
        {% if messages[1] %}
        <div class="alert alert-danger">{{messages[1]}}</div>
        {% endif %}
        <form action="{{url}}" method="post" role='form'>
          <input type="hidden" name="came_from" value="{{came_from}}"/>
          <div class='form-group'>
            <label for="login">Email address</label>
            <input type="text" class="form-control" name='login' id="login" placeholder="the new test user name is test@test.com" value="{{login}}">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name='password' placeholder="Password" value="{{password}}">
          </div>
          <button class="btn btn-default" type="submit" name="login.submitted">Log In</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}


{% block scripts %}{% endblock %}
