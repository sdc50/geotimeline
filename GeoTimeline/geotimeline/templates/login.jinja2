{% extends "base.html" %}
{% block title %}Login{% endblock %}
{% block head %}
    {{ super() }}
    <!-- Add to head here -->
    <style>
      #usr-group{
        display:none;
      }
    </style>
{% endblock %}

{% block content %}
  <div id="login-container" class="index-section">
    <div id="middle">
      <div class="middle align-right">
        <div id="left" class="app-welcome align-left">
          
        </div>
        <div id="right" class="app-welcome align-right"></div>
      </div>
    </div>
    <div id="bottom">
      <div id='signup' class='login-block'>
       <h2>Sign Up</h2>
       {% if messages[0] or messages[1] or messages[2] or messages[3] or messages[4]%}
       <div class="alert alert-danger">
         <p>{{messages[0]}}</p>
         <p>{{messages[1]}}</p>
         <p>{{messages[2]}}</p>
         <p>{{messages[3]}}</p>
         <p>{{messages[4]}}</p>
       </div>
       {% endif %}
        <form action="{{url}}" method="post" role="form">
          <input type="hidden" name="came_from" value="{{came_from}}"/>
          <div class='form-group {% if messages[0] %}has-error has-feedback{% endif%}'>
            <label for="first-name">First Name</label>
            <input type="text" class="form-control" name='first-name' id="first-name" placeholder="Required" value="{{firstName}}">
            {% if messages[0] %}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {% endif%}
          </div>
          <div class='form-group {% if messages[1] %}has-error has-feedback{% endif%}'>
            <label for="last-name">Last Name</label>
            <input type="text" class="form-control" name='last-name' id="last-name" placeholder="Required" value="{{lastName}}">
            {% if messages[1] %}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {% endif%}
          </div>
          <div class="form-group {% if messages[2] or messages[3]%}has-error has-feedback{% endif%}">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name='email' placeholder="Required" value="{{email}}">
            {% if messages[2] or messages[3]%}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {% endif%}
          </div>
          <div class="form-group {% if messages[4] %}has-error has-feedback{% endif%}">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Required">
            {% if messages[4] %}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {% endif%}
          </div>
          <div class="form-group {% if messages[4] %}has-error has-feedback{% endif%}">
            <label for="confirm">Confirm Password</label>
            <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Required">
            {% if messages[4] %}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {% endif%}
          </div>
          <button type="submit" class="btn btn-default" name='signup.submitted'>Submit</button>
        </form>
      </div>
      <div class='login-block'>
        <h2>Login</h2>
        {% if messages[5] %}
        <div class="alert alert-danger">{{messages[5]}}</div>
        {% endif %}
        <form action="{{url}}" method="post" role='form'>
          <input type="hidden" name="came_from" value="{{came_from}}"/>
          <div class='form-group'>
            <label for="login">Email address</label>
            <input type="text" class="form-control" name='login' id="login" placeholder="Email" value="{{login}}">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name='password' placeholder="Password" value="{{password}}">
          </div>
          <button class="btn btn-default" type="submit" name="login.submitted">Log In</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}


{% block scripts %}{% endblock %}
